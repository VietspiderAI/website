{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "trailingComma": "none", "semi": false, "singleQuote": true }
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
